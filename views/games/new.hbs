<section>
    <div class="main-container">
        <h1 class="mb-5">Créer une nouvelle partie</h1>

        <form action="/games" method="POST" class="text-sm">
            <div class="flex flex-col mb-3">
                <label for="name">Nom</label>
                <input type="text" name="name" placeholder="Nom" required>
            </div>
            <div class="flex flex-col mb-3">
                <label for="mode">Mode de jeu</label>
                <select name="mode" id="mode" required>
                    <option value="">Sélectionnez un mode de jeu</option>
                    <option value="around-the-world">Around the World</option>
                    <option value="301">301</option>
                    <option value="cricket">Cricket</option>
                </select>
            </div>
            <button class="text-lg bg-gray-900 hover:bg-black font-bold tracking-wide rounded-md px-3 py-2 w-full text-white text-center">
                Créer une nouvelle partie
            </button>
        </form>
    </div>
</section>